{
  "browser_action" : {
    "default_icon" : {
      "19" : "imgs/icon.png" }},
  "background" : {
    "page" : "background.html"},
  "content_scripts" : [{
      "matches" : ["http://*/*", "https://*/*"],
      "exclude_matches" : ["*://*.twitter.com/*", 
                           "*://*.hn-button.herokuapp.com/*"],
      "all_frames" : true,
      "css" : ["block.css", "page.css"],
      "js" : ["global.js", "page.js"]}],
  "manifest_version" : 2,
  "description" : "Block share with social media icons.",
  "name" : "ShareBlock",
  "permissions" : ["tabs", "http://*/*", "https://*/*",  "<all_urls>", "contextMenus"],
  "version" : "0.1",
  "content_security_policy" : 
    "script-src 'self' https://connect.facebook.net; object-src 'self'",
  "web_accessible_resources": 
    ["block.css", "popup.js", "popup.html", "popup.css",
     "https://connect.facebook.net/en_US/sdk.js"]
}
