{
  "background" : {
    "page" : "background.html"},
  "content_scripts" : [{
      "matches" : ["http://*/*", "https://*/*"],
      "exclude_matches" : ["*://*.twitter.com/*", 
                           "*://*.redditstatic.com/*",
                           "*://*.hn-button.herokuapp.com/*"],
      "all_frames" : true,
      "css" : ["block.css", "page.css"],
      "js" : ["global.js", "widgets.js", "page.js"]}],
  "manifest_version" : 2,
  "description" : "Block share with social media icons.",
  "name" : "ShareBlock",
  "permissions" : ["tabs", "http://*/*", "https://*/*",  "<all_urls>", "contextMenus"],
  "version" : "0.1",
  "content_security_policy" : 
    "default-src 'self' http://*.webdever.net 'unsafe-eval'; script-src 'self' 'unsafe-eval'; object-src 'self' 'unsafe-eval'",
  "web_accessible_resources": 
    ["block.css", "popup.js", "popup.html", "popup.css",
     "http://www.webdever.net/shareblock/popup.html"]
}
